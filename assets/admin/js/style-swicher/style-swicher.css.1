/*=========== Styleswicher ==========*/

#style-selector {
	position: fixed;
	top: 180px;
	right: -320px;
	width: 320px;
	padding: 20px 0;
	z-index: 9999;
	background-color: #fff;
	-moz-box-shadow: 0px 0px 4px rgba(0, 0, 0, 0.2);
	-webkit-box-shadow: 0px 0px 4px rgba(0, 0, 0, 0.2);
	box-shadow: 0px 0px 4px rgba(0, 0, 0, 0.2);
}
.style-selector-wrapper {
	z-index: 9999;
	padding: 0 20px 20px 20px;
	margin: 0px;
}
#style-selector .title-big {
	width: 100%;
	font-size: 18px;
	padding: 0 0 20px 0;
	text-align: center;
	text-transform: uppercase;
	font-weight: normal;
	border-bottom: 1px solid #efefef;
}
.style-selector-wrapper .title {
	width: 100%;
	font-size: 14px;
	padding: 0 0 10px 0;
	text-align: center;
	text-transform: uppercase;
	font-weight: normal;
	border-bottom: 1px solid #efefef;
}
.style-selector-wrapper .title.align-left {
	text-align: left;
}
#style-selector .btn-close {
	position: absolute;
	top: 0px;
	right: 320px;
	width: 70px;
	height: 40px;
	line-height: 38px;
	text-align: center;
	background-color: #101010;
	border-radius: 12px 0px 0px 0px;
	font-size: 16px;
	color: #323232;
	opacity: 1;
	z-index:1;
	color:#fff;
	font-size: 12px;
    text-transform: uppercase;
	text-decoration:none;	
	background: #2eade8; 
	background: -moz-linear-gradient(top, #2eade8 1%, #3e2ef2 100%); /* FF3.6-15 */
	background: -webkit-linear-gradient(top, #2eade8 1%,#3e2ef2 100%); /* Chrome10-25,Safari5.1-6 */
	background: linear-gradient(to bottom, #2eade8 1%,#3e2ef2 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#2eade8', endColorstr='#3e2ef2',GradientType=0 ); /* IE6-9 */
}
.style-selector-wrapper a.btn-gray {
	padding: 5px 20px;
	margin: 0 15px 0 0;
	vertical-align: middle;
	text-align: center;
	background-color: #ededed;
	border-radius: 4px;
	color: #242424;
	text-decoration:none;
}
.style-selector-wrapper a.btn-gray.active {
	background-color: #242424;
	color: #878787;
}
#style-selector .btn-close i {
	color: #fff;
}
.style-selector-wrapper ul.pre-colors-list {
	width: 100%;
	padding: 0px;
	margin: 0 0 16px 0;
	float: left;
}
.style-selector-wrapper ul.pre-colors-list li {
	display: inline;
	padding: 0px;
	margin: 0 14px 14px 0;
	float: left;
}
.style-selector-wrapper ul.pre-colors-list li.last {
	margin: 0 0 0 0;
}
.style-selector-wrapper ul.bg-pattrens-list {
	width: 100%;
	padding: 0px;
	margin: 0px;
	float: left;
}
.style-selector-wrapper ul.bg-pattrens-list li {
	display: inline;
	padding: 0px;
	margin: 0 14px 14px 0;
	float: left;
}
.style-selector-wrapper ul.bg-pattrens-list li.last {
	margin: 0 0 0 0;
}
